<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Week7Assignment"
        android:layout_width="204dp"
        android:layout_height="80dp"
        android:onClick="onClick"
        android:text="@string/a7_at_your_service"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/fireBaseAssignment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamName" />

    <TextView
        android:id="@+id/teamName"
        android:layout_width="193dp"
        android:layout_height="59dp"
        android:text="@string/team_16"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Week7Assignment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fireBaseAssignment"
        android:layout_width="204dp"
        android:layout_height="80dp"
        android:text="@string/firebase_assignment"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/toGatherButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Week7Assignment" />

    <Button
        android:id="@+id/toGatherButton"
        android:layout_width="204dp"
        android:layout_height="80dp"
        android:text="@string/togather"
        android:textAllCaps="false"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fireBaseAssignment" />

    <Button
        android:id="@+id/butAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About us"
        app:layout_constraintBottom_toTopOf="@+id/Week7Assignment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamName" />

</androidx.constraintlayout.widget.ConstraintLayout>